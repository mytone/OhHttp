@page "/"
@using OhHttp.HttpCon


<input class="text-lg-start"  type="text" size="80"  @bind="Url" />
<input type="button" class="btn btn-sm btn-danger" @onclick="httpget" value="httpget"/>
<br/><br/>
<textarea style="min-height:400px; width:100%; font-size:12px;">@httpgetresult</textarea>

@code{

    private string httpgetresult;
    private string Url;

    private async void httpget()
    {
        HttpContext hct = new HttpContext(Url);
        httpgetresult = await hct.HttpClientGet();
    }



}
