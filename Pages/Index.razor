@page "/"
@using OhHttp.HttpCon


<input  class="text-body"  type="text"  @bind="Url" />
<input  type="button" class="btn btn-danger" @onclick="httpget" value="httpget"/>
<br/><br/>
<span style="height:100%; width:auto;">@httpgetresult</span>

@code{

    private string httpgetresult;
    private string Url;

    private void httpget()
    {
        HttpContext hc = new HttpContext(Url);
        httpgetresult = hc.HttpGet();
    }



}
